{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "react/jsx-filename-extension": ["off"],
        "linebreak-style": ["off"],
        "no-undef": ["error"],
        "react/sort-comp": ["off"],
        "react/prefer-stateless-function": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "all",
                "printWidth": 100
            }
        ]
    },
    "plugins": [
        "prettier"
    ]
}